#installime iso
sudo wget https://assets.nagios.com/downloads/csp/CSP-latest.iso
#kausta tegemine
sudo mkdir /mnt/iso
#ketta peale panemine
sudo mount -o loop /home/ubuntu/CSB-latest.iso /mnt/iso
#ZIP faili laadimine
sudo wget https://assets.nagios.com/downloads/csp/CSP-latest.zip
#kausta loomine
sudo mkdir /mnt/zipfile
#UNZIP-i alla laadimine
# 1. RHEL/Centos Süsteemid
sudo dnf install unzip
# 2. Debian/Ubuntu Süsteemid
sudo apt install unzip
#UNZIP-ime faili
sudo unzip /home/ubuntu/CSP-latest.zip -d /mnt/zipfile

https://reintech.io/blog/installing-configuring-nagios-ubuntu-22

sudo apt update
sudo apt install apache2
sudo systemctl status apache2
cd /tmp
sudo wget https://assets.nagios.com/downloads/nagioscore/releases/nagios-4.4.6.tar.gz
sudo wget https://nagios-plugins.org/download/nagios-plugins-2.3.3.tar.gz
tar zxvf nagios-4.4.6.tar.gz
tar zxvf nagios-plugins-2.3.3.tar.gz
cd /tmp/nagios-4.4.6
./configure --with-httpd-conf=/etc/apache2/sites-enabled
sudo apt install make
